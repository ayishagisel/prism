# Database
DATABASE_URL=postgresql://user:password@localhost:5432/prism

# Auth (MVP demo)
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRY=7d

# Server
PORT=3001
NODE_ENV=development

# Demo Mode
DEMO_MODE=true

# Email Service (AWS SES)
AWS_SES_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# App Config
APP_URL=http://localhost:3000

# Zoho CRM Integration
# Get these from Zoho Developer Console: https://accounts.zoho.com/developerconsole
ZOHO_CLIENT_ID=your_client_id_here
ZOHO_CLIENT_SECRET=your_client_secret_here
ZOHO_ORG_ID=your_org_id_here
ZOHO_REALM=us
# ZOHO_REALM options: us, eu, in, au, jp, ca

# Zoho OAuth Callback (must match in Zoho console)
ZOHO_REDIRECT_URI=http://localhost:3000/zoho/callback
